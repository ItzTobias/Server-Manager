<Application x:Class="Server_Manager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Server_Manager"
             xmlns:uielements="clr-namespace:Server_Manager.UIElements"
             xmlns:smr="clr-namespace:ServerManagerFramework;assembly=ServerManagerFramework"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ServerManagerFramework;component/SMR.xaml" />

                <ResourceDictionary>
                    <Style TargetType="ToolTip"
                           BasedOn="{StaticResource {x:Type ToolTip}}">
                        <Setter Property="Background"
                                Value="{StaticResource Brightness1}" />
                        <Setter Property="Foreground"
                                Value="{StaticResource FontColor}" />
                        <Setter Property="BorderThickness"
                                Value="0" />
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
